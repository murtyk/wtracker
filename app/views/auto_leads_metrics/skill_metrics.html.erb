<h1>Skill Metrics</h1>
<div class='row-fluid'>
  <div class='span5'>
    <h2>All Skills/Keywords</h2>
    <table id="table_skill_metrics" class="table table-condensed table-bordered table-striped table-hover">
      <tr>
        <th>#</th>
        <th>Skill/Keyword</th>
        <th>No. of Trainees</th>
      </tr>
      <% n = 0 %>
      <% @skill_metrics.metrics.each do |skills, count| %>
        <% n += 1%>
        <tr>
          <td><%= n %></td>
          <td><%= skills %></td>
          <td><%= count %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class='span5 offset1'>
    <h2>Top Skills/Keywords</h2>
    <% unless @skill_metrics.top_skills.empty? %>
      <table id="table_top_skills" class="table table-condensed table-bordered table-striped table-hover">
        <tr>
          <th>#</th>
          <th>Skill/Keyword</th>
          <th>No. of Trainees</th>
        </tr>
        <% n = 0 %>
        <% @skill_metrics.top_skills.each do |skill, count| %>
          <% n += 1%>
          <tr>
            <td><%= n %></td>
            <td><%= skill %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>