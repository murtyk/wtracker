<div class = 'row-fluid page-caption-div' >
  <h1>Trainee Status Options</h1>
  <div class='span4'  style='border-right: thin solid blue'>
    <% if current_user.admin_access? %>
      <%= simple_form_for(current_grant) do |f| %>
        <%= f.input :default_trainee_status_id, collection: GrantTraineeStatus.all %>
        <div class="form-actions">
          <%= submit_button(f,'Update') %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class='span5 offset1'>
    <% if policy(GrantTraineeStatus).index? %>
      <div id='grant_trainee_statuses'>
        <%= render @grant_trainee_statuss %>
      </div>
        <%= link_to new_grant_trainee_status_path, class: "btn btn-flat btn-small btn-primary", id: 'new_grant_trainee_status_link', remote: true, rel:"tooltip", title:"Add Funding Source" do%>
          <i class="icon-plus"></i> New
      <% end %>
    <% end %>
  </div>
</div>
