<%= simple_form_for(special_service,remote: true) do |f| %>
	<%= f.error_notification %>
	<div class='form-inputs'>
		<%= f.input :name , input_html: {style: 'width: 400px'}%>
	</div>
	<div class="form-actions">
		<%= ajax_cancel_and_submit_buttons(f) %>
	</div>
<% end %>
<script type="text/javascript">

  $('#new_special_service').submit(function() {
    if ($('#special_service_name').val() == ""){
      alert("Please enter funding soruce name");
      return false;
    }
    if ($('#special_service_name').val().length < 3){
      alert("Name should be minimum 3 characters");
      return false;
    }

  });
</script>

<%= ajax_form_cancel_script(special_service) %>