<%= simple_form_for(hot_job, remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :date_posted, input_html: { data: { behaviour: "datepicker" } },
                              as: :string %>
    <%= f.input :location %>
    <%= f.input :closing_date, input_html: { data: { behaviour: "datepicker" } },
                               as: :string %>
    <%= f.input :title, input_html: {style: 'width: 400px'}%>
    <%= f.input :description, as: :text, input_html: {style: 'width: 400px'} %>
    <%= f.input :salary%>
  </div>
  <%= f.hidden_field :employer_id %>

  <div class="form-actions">
    <%= ajax_cancel_and_submit_buttons(f) %>
  </div>
  <%= ajax_form_cancel_script(hot_job) %>
<% end %>
