<div class="row-fluid" >
  <div class="opero-widget-box">
    <div class="opero-widget-header">
      <h1><%="#{hot_job.new_record? ? 'New' : 'Edit'} Hot Job"%></h1>
    </div>
    <%= simple_form_for(hot_job, html: { class: "form-horizontal"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :date_posted, input_html: { data: { behaviour: "datepicker" } },
                                  as: :string %>
        <%= f.association :employer, collection: current_user.employers.order(:name),
                                     input_html: {style: 'width: 400px'} %>
        <%= f.input :location %>
        <%= f.input :closing_date, input_html: { data: { behaviour: "datepicker" } },
                                   as: :string %>
        <%= f.input :title, input_html: {style: 'width: 400px'}%>
        <%= f.input :description, as: :text, input_html: {style: 'width: 400px'} %>
        <%= f.input :salary%>
      </div>
      <div class="form-actions">
        <%= render 'shared/cancel_link' %>
        <%= submit_button(f) %>
      </div>
    <% end %>
  </div>
</div>
