$('#edit_mentor_<%=@mentor.id%>').remove();
<% if @mentor.errors.any? %>
  $('#<%=div_id_for(@mentor)%>').hide().after('<%= j render("jsform", mentor: @mentor) %>');
<% else %>
  $('#<%=div_id_for(@mentor)%>').replaceWith('<%= j render(@mentor) %>');
  $('#<%=div_id_for(@mentor)%>').show();
<% end %>
