<% if policy(CertificateCategory).index? %>
  <h1>Certificate Categories</h1>

  <div id='certificate_categories'>
    <%= render @certificate_categories %>
  </div>

  <% if policy(CertificateCategory).create? %>
    <%= link_to(new_certificate_category_path,
                class: "btn btn-flat btn-small btn-primary",
                id: 'new_certificate_category_link',
                remote: true,
                title:"Add Class Category") do%>
      <i class="icon-plus"></i> New
    <% end %>
  <% end %>
<% end %>
