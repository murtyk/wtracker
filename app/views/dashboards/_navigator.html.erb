<div class = 'row-fluid'>
  <div class='span5'>
    <h1>Trainee Interviews</h1>
    <table class="table table-condensed table-bordered table-striped table-hover">
      <tr class='info'>
        <th>Class</th>
        <th>Trainee</th>
        <th>Date</th>
        <th>Employer</th>
        <th>Interviewer</th>
      </tr>
      <% @interviews.each do |interview| %>
      <tr class='info'>
        <td><%= interview.klass_names.join('<br>').html_safe%></td>
        <td><%= interview.trainee_name%></td>
        <td><%= interview.interview_date%></td>
        <td><%= interview.employer_name%></td>
        <td><%= interview.interviewer%></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class='span5 offset1'>
    <h1>Visits</h1>
    <table class="table table-condensed table-bordered table-striped table-hover">
      <tr class='info'>
        <th>Class</th>
        <th>Event</th>
        <th>Date</th>
        <th>Employers</th>
      </tr>
      <% @visits.each do |visit| %>
      <tr class='info'>
        <td><%= visit.klass_name%></td>
        <td><%= visit.name%></td>
        <td><%= visit.event_date%></td>
        <td><%= visit.employer_names.join('<br>').html_safe%></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>