<div class = 'row-fluid page-caption-div' >
    <h1>Grant: <%=@grant.name%></h1>
</div>

<div class = 'row-fluid' >
  <div class='span4'>
    <table id="table_report" class="table table-bordered table-striped table-hover">
      <tr>
        <td>Start Date</td>
        <td><%= @grant.start_date %></td>
      </tr>
      <tr>
        <td>End Date</td>
        <td><%= @grant.end_date %></td>
      </tr>
      <tr>
        <td>Status</td>
        <td><%= @grant.status %></td>
      </tr>
      <tr>
        <td>Trainee Spots</td>
        <td><%= @grant.spots %></td>
      </tr>
      <% if @grant.trainee_applications? %>
      <tr>
        <td>Reply To Email</td>
        <td><%= @grant.reply_to_email %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class='span6'>
    <h4>Programs</h4>

    <table id="table_report" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
      <% @grant.grant_programs.each do |program| %>
        <tr>
          <td ><%= current_grant == @grant ? name_and_link(program) : program.name %></td>
          <td ><%= program.description%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
