<div class="row-fluid" >
  <div class="opero-widget-box">
    <div class="opero-widget-header ">
      <h1>Applicant Re-apply Email Message</h1>
    </div>
     <%= simple_form_for(current_grant, html: { class: "form-horizontal" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :reapply_subject, lablel: 'Subject' %>
        <%= f.input :reapply_body, lablel: 'Body', as: :text, input_html: { style: 'width: 400px; height: 100px' }, hint: "meta key words: $FIRSTNAME$, $LASTNAME$, $REAPPLY_LINK$" %>
      </div>
      <div class="form-actions">
        <%= render 'shared/cancel_link' %>
        <%= submit_button(f) %>
      </div>
      <% end %>
  </div>
</div>
