<table id="data-table" class="table table-condensed table-bordered table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Student ID</th>
    <th>Class</th>
    <th>Funding Source</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>College</th>
    <th>Notes</th>
    <th>Status</th>
    <th>Employer</th>
    <th>Location</th>
    <th>Title</th>
    <th>Start Date</th>
    <th>Pay</th>
  </tr>

  <% report.trainee_statuses.each do |trainee_status| %>
    <tr>
      <td><%= link_to trainee_status.name, trainee_status.trainee %></td>
      <td><%= trainee_status.student_id %></td>
      <td><%= name_and_link(trainee_status.klass)%></td>
      <td><%= trainee_status.funding_source_name %></td>
      <td><%= trainee_status.start_date %></td>
      <td><%= trainee_status.end_date %></td>
      <td><%= trainee_status.college_name_location%></td>
      <td><%= trainee_status.notes %></td>
      <td><%= trainee_status.status %></td>
      <td><%= link_to(trainee_status.hired_employer_name, trainee_status.hired_employer) if trainee_status.hired %></td>
      <td><%= trainee_status.employer_location%></td>
      <td><%= trainee_status.hire_title%> </td>
      <td><%= trainee_status.job_start_date %></td>
      <td><%= trainee_status.hire_salary%> </td>
    </tr>
  <% end %>
</table>