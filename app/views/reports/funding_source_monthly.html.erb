<h1><%= @report.title%></h1>

<%= render("single_funding_source_selection", report: @report)%>

<% if @report.has_data? %>

<% para = params[:report].merge(action: :by_email) %>
<%= email_download_button(para) %>

<table id="data-table" class="table table-condensed table-bordered table-striped table-hover">
  <thead>
    <tr style="display:none;">
      <th><%= @report.title%></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <% @report.header.each do |h| %>
        <th><%= h %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @report.rows.each do |row| %>
      <tr>
        <% row.each do |d| %>
          <td><%= d %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if true %>

<table id="data-table" class="table table-condensed table-bordered table-striped table-hover">
  <thead>
    <tr>
      <% @report.data_header.each do |h| %>
        <th><%= h %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @report.data_rows.each do |row| %>
      <tr>
        <% row.each do |d| %>
          <td><%= d %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
<% end %>
