<h1>Your Preferences</h1>

<% if current_user.copy_job_shares? %>
	<h4>You will be copied on jobs forwarded to trainees</h4>
<% else %>
	<h4>You will NOT be copied on jobs forwarded to trainees</h4>
<% end %>

<hr>

<h4>Change Preferences</h4>

<%= simple_form_for(current_user, url: update_preferences_users_path, method: :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :pref_copy_jobshares, label: false, as: :radio_buttons, collection: user_copy_job_leads_options %>
  </div>

  <div class="form-actions">
    <%= submit_button(f)%>
  </div>
<% end %>
