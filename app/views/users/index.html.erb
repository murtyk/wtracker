<div class = 'row-fluid page-caption-div' >
	<h1>Users</h1>
</div>

<div class = 'row-fluid'>
  <%= new_button(User) %>
</div>

<table class="table table-bordered table-striped table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Location</th>
    <th>Role</th>
    <th>Acts As Admin?</th>
    <th>Grants</th>
    <th>Status</th>
    <% if current_grant.trainee_applications? %>
      <th>Counties</th>
    <% end %>
    <th>Online?</th>
    <th>Actions</th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>
    <tr id='tr_<%=user.id%>'>
      <td>  <%= user.name %>     </td>
      <td>  <%= user.email %>    </td>
      <td>  <%= user.location %> </td>
      <td>  <%= user.role %>     </td>
      <td>  <%= user.acts_as_admin? ? 'Yes' : nil%> </td>
      <td>  <%= user.grant_names %>     </td>
      <td>  <%= user.status %>   </td>
      <% if current_grant.trainee_applications? %>
        <td><%= user.assigned_county_names %></td>
      <% end %>
      <td>  <%= user.online_status %> </td>
      <td>
        <%= show_button(user) %>
        <%= edit_button(user) %>
        <%= button_destroy_association(user) %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
