<%= simple_form_for employment_status do |f| %>
  <%= f.error_notification %>
  <div class='form-inputs'>
    <%= f.input :status, required: true %>
    <%= f.input :pre_selected,
                as: :boolean,
                label: false,
                inline_label: 'Pre Selected',
                value: 'Yes' %>
    <%= f.input :action,
                collection: applicant_employment_statuses,
                include_blank: false %>
    <%= f.input :email_subject %>
    <%= f.input :email_body,
                input_html: { style: 'width: 600px; height: 400px' },
                hint: "meta key words for applicant's name: $FIRSTNAME$, $LASTNAME$, $LOGIN_ID$" %>
  </div>
  <div class="form-actions">
    <%= render 'shared/cancel_link' %>
    <%= submit_button(f) %>
  </div>
<% end %>
