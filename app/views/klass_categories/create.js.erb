<% if @klass_category.errors.any? %>
  $('#error_text').text('<%= @klass_category.errors.first[1] %>');
<% else %>
  $('#error_text').text('');
  $("#flash_notice").html('<%= j render partial: "shared/notice_banner" %>');
  $('#new_klass_category').remove();
  $('#klass_categories').html('<%= j render @klass_categories %>');
  $('#new_klass_category_link').show();
<% end %>
