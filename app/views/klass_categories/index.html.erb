<% if policy(KlassCategory).index? %>
  <h1>Class Categories</h1>

  <div id='klass_categories'>
    <%= render @klass_categories %>
  </div>

  <% if policy(KlassCategory).create? %>
    <%= link_to(new_klass_category_path,
                class: "btn btn-flat btn-small btn-primary",
                id: 'new_klass_category_link',
                remote: true,
                rel:"tooltip",
                title:"Add Class Category") do%>
      <i class="icon-plus"></i> New
    <% end %>
  <% end %>
<% end %>
