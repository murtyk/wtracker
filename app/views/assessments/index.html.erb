<div class = 'row-fluid page-caption-div' >
  <h1>Assessments</h1>
</div>
<div class = 'row-fluid' >
  <% if policy(Assessment).edit? %>
  <div class='span4'  style='border-right: thin solid blue'>
    <% if current_user.admin_access? %>
      <%= simple_form_for(current_grant) do |f| %>
        <%= f.input :assessments_include_score, as: :boolean, label: false, inline_label: 'Include score in assessments?' %>
        <%= f.input :assessments_include_pass, as: :boolean, label: false, inline_label: 'Include pass/fail in assessments?' %>
        <div class="form-actions">
          <%= submit_button(f,'Update') %>
        </div>
      <% end %>
    <% end %>
  </div>
  <% end %>
  <div class='span5 offset1'>
    <div id='assessments'>
      <%= render @assessments %>
    </div>

    <% if policy(Assessment).new? %>
      <button class="btn btn-flat btn-primary" id="new_assessment_link">
        New Assessment
      </button>

      <div id="assessment_form" style="display: none;">
        <div class="control-group string required assessment_name">
          <label class="string required control-label" for="assessment_name">
            <abbr title="required">*</abbr> Name
          </label>
          <div class="controls">
            <input class="string required" name="assessment[name]" id="assessment_name" type="text">
          </div>
        </div>
        <div class="form-actions">
          <button id="cancel_assessment" class="btn btn-flat btn-small btn-danger">
            Cancel
          </button>
          <button id="submit_assessment" class="btn btn-flat btn-small btn-primary">
            <i class="icon-ok"></i> Add
          </button>
        </div>

        <%#= render "jsform", assessment: Assessment.new %>
      </div>

      <div id="assessment_id" style="display: none;">
        <p>
          <button class="btn btn-flat btn-mini btn-danger btn-delete-assessment"
             id="destroy_assessment_id_link"
             href=""
             rel="tooltip nofollow"
             title="Delete">
            <i class="icon-trash red"></i>
          </button>
        </p>
      </div>
    <% end %>
  </div>
</div>
