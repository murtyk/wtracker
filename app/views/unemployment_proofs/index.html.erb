<h1>Unemployment Proof Options</h1>
<div class='row-fluid'>
  <div class = 'span5'>
    <h2>Options</h1>
    <% if policy(UnemploymentProof).index? %>
      <div id='unemployment_proofs'>
        <%= render @unemployment_proofs %>
      </div>
        <%= link_to new_unemployment_proof_path, class: "btn btn-flat btn-small btn-primary", id: 'new_unemployment_proof_link', remote: true, rel:"tooltip", title:"Add Funding Source" do%>
          <i class="icon-plus"></i> New
      <% end %>
    <% end %>
  </div>
  <div class = 'span5'>
    <% if policy(Grant).edit? %>
      <%= simple_form_for(current_grant, remote: true) do |f| %>
        <%= f.input :unemployment_proof_text,
                    as: :text,
                    input_html: { style: 'width: 500px; height: 200px' } %>
        <%= f.submit 'Update' %>
      <% end %>
    <% else %>
      <h2>Unemployment Email Text:</h2>
      <p><%= current_grant.unemployment_proof_text.gsub(/\r\n/, '<br>').html_safe %> </p>
    <% end %>
  </div>
</div>
